<div>
  <%= form_with url: '/profiles', method: :get, local: true do %>
    <%= label_tag :username, 'Search for: ' %>
    <%= text_field_tag :username %>

    <%= submit_tag 'Search' %>
  <%end %>

  <% @users.each do |user| %>
    <p>
      <%= link_to user.username, profile_path(user.username) %>

      <% @friend_request = user.received_requests.build %>

      <%= form_for @friend_request do |f| %>
        <%= f.hidden_field :to_id %>
        <%= f.submit "Send Friend Request" %>
      <% end %>
    </p>
  <% end %>
</div>
